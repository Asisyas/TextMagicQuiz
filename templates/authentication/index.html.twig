{% extends 'base.html.twig' %}

{% block title %}Hello AuthenticationController!{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card" style="width: 30rem;">
            <div class="card-body">
                <h5 class="card-title">Let's have a quiz!</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">Choose some username, please</h6>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group">
                    <label for="{{ form.username.vars.id }}" class="col-sm-4 col-form-label">{{ form.username.vars.label }}</label>
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Stanislau'}}) }}
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary btn-block">Start Quiz</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
